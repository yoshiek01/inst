<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
  <!-- 中央寄せにするため、wrapperでブログ画面をかこむ -->

    <p><%= notice %></p>
    <h1>pictures一覧</h1>
      <%= link_to "ブログを投稿する", new_blog_path, class: 'btn btn-default' %>
      <!-- btnはボタン-->

      <% @blogs.each do |blog| %>
       <div class="row">
        <h3><%= blog.user.name %></h3>
        <h4><%= profile_img(blog.user) %></h4>

        <h5><strong><%= blog.title %></strong></h5>
        <!-- strongは太字 -->

        <p><%= blog.content %></p>

        <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
       </div>
      <% end %>
  </div>
</div>
